window=tkinter.Tk()
window.columnconfigure(0,weight=1)
window.columnconfigure(3,weight=4)
selected=tkinter.StringVar()

user_name=ttk.Label(window,text='Selected: ')
user_name.grid(column=2,row=3,sticky=tkinter.W,padx=5,pady=5)

def Print():
    user_name=ttk.Label(window,text='                             ')
    user_name.grid(column=2,row=3,sticky=tkinter.W,padx=5,pady=5)
    select=selected.get()
    print(select)
    user_name=ttk.Label(window,text='Selected: '+str(select))
    user_name.grid(column=2,row=3,sticky=tkinter.W,padx=5,pady=5)
def Clean():
    user_name=ttk.Label(window,text='                             ')
    user_name.grid(column=2,row=3,sticky=tkinter.W,padx=5,pady=5)

r1=ttk.Radiobutton(window,text='Tamal',value='Tamal',variable=selected,command=Print)
r1.grid(column=0,row=0,pady=5,padx=5)
r2=ttk.Radiobutton(window,text='Pizza',value='Pizza',variable=selected,command=Print)
r2.grid(column=1,row=0,pady=5,padx=5)
r3=ttk.Radiobutton(window,text='Pastas',value='Pastas',variable=selected,command=Print)
r3.grid(column=2,row=0,pady=5,padx=5)

clear_button=ttk.Button(window,text='Clean',command=Clean)
clear_button.grid(column=4,row=3,sticky=tkinter.E,padx=5,pady=5)

window.mainloop()
